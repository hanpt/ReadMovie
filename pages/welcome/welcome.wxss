page {
  background-color: #b3d4db;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar {
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}
.user-name {
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: 700;
}
.moto-container {
  margin-top: 200rpx;
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
}
.moto {
  font-size: 22rpx;
  font-weight: 700;
  color: #405f80;
  line-height: 80rpx;
}