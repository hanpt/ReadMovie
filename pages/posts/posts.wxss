swiper {
  width: 100%;
  height: 560rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding-bottom: 5px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}
.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}
.post-author {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date {
  margin-left: 20rpx;
  margin-bottom: 5px;
  font-size: 26rpx;
  color: #666;
  vertical-align: middle;
}
.post-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin: auto 0;
  margin-left: 10px;
  margin-bottom: 10px;
}
.post-image {
  margin: 0 auto 15px;
  width: 100%;
  height: 340rpx;
}
.post-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-right: 8px;
}
.post-like-font {
  margin-right: 20px;
  vertical-align: middle;
  color: #666;
}